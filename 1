#include <iostream>
// цель программы двигать строку на определенный сдвиг в право,вводимый пользователем+ условие(размер строки 60-80 элементов)
//данное условие : пустые элементы заполнить выбывшими из строки(закольцевать строку),длинну строки выбрал 70
using namespace std;

int main()
{
    setlocale(LC_ALL,"Russian");
    int g[70];
    int gg[70];
    cout<<"введите сдвиг"<<endl;
    int s;
    cin>>s;
     for(int i=0;i<70;i++)
    {
       g[i]=i+1;
    }
    for(int i=0;i<70;i++)
    {
        if(i+s<70)
        {
        gg[i+s]=g[i];
        }
        if(i<s)
        {gg[i]=g[69-i];}
        cout<<gg[i]<<";";
    }
    return 0;
}
