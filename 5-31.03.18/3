//Задача: Найти все положительные элементы главной диагонали квадратной матрицы
#include <iostream>
using namespace std;
#include <cstdlib>
#include <ctime>
	int k;
int main() 
{ 	setlocale(LC_ALL, "Russian");
	cout<<"Ââåäèòå k"<<endl;
	cin>>k;
int mas[k][k];
	for(int i=0;i<k;i++)
	{//cout<<endl;  
	for(int j=0;j<k;j++){
        int f =rand() % 10;
        if(f<5)
        {
            mas[i][j]=(rand() % 1000)*-1;
        }
        else
        {
            mas[i][j]=rand() % 1000;
        }

		
		//cout<<mas[i][j]<<" ";
	}}
for(int i=0;i<k;i++)
	{  for(int j=0;j<k;j++){
        if(i==j&&mas[i][j]>0){
        	cout<<";"<<mas[i][j];
		}
	
	}}

	return 0;
}
