//1.Необходимо посчитать кол-во единиц в двоичной записи числа n.
#include <iostream>
#include <stdlib.h>
#include <string>
using namespace std;
 
int main()
{
    int dec, mod, sum;
    cout << "Enter decimal num\n";
    cin >> dec;
    
    while (dec)
    {
        mod = dec % 2;
        dec /= 2;
        sum +=mod;
    }
    
    cout << sum;
}
